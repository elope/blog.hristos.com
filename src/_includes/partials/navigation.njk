<nav class="site-nav">
    {% if site.navigation %}
        <div class="site-nav-left">
            {% for item in site.navigation %}
                <a {% if page.url == item.url %}aria-current="page"{% endif %} class="site-nav-item" href="{{ item.url }}">
                    {{ item.label }}
                </a>
            {% endfor %}
        </div>
    {% endif %}
    {% if site.secondary_navigation %}
        <div class="site-nav-right">
            {% for doc in site.secondary_navigation %}
                <a {% if page.url == doc.url %}aria-current="page"{% endif %} class="site-nav-button{% if doc.featured %}  site-nav-button-featured{% endif %}" href="{{ doc.url }}">
                    {{ doc.meta_title if doc.meta_title else doc.title }}
                </a>
            {% endfor %}
        </div>
    {% endif %}
</nav>
